<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Background tasks -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.pravera.flutter_foreground_task.refresh</string>
    </array>

    <!-- Basic app info -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>X Obese</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>x_obese</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Privacy usage descriptions -->
    <key>NSHealthShareUsageDescription</key>
    <string>We use HealthKit to read your activity data and provide personalized fitness insights.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>We use HealthKit to save your workout data and health metrics to provide comprehensive fitness tracking.</string>

    <!-- Location permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs location access to track your running, walking, and cycling routes.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>This app needs continuous location access to track your activities accurately even when the app is in the background.</string>
    <!-- (Optional but good for backwards compatibility) -->
    <key>NSLocationAlwaysUsageDescription</key>
    <string>This app needs continuous location access to track your activities accurately even when the app is in the background.</string>

    <!-- Motion data -->
    <key>NSMotionUsageDescription</key>
    <string>This app needs access to your motion data to track your steps and workouts.</string>

    <!-- Local network / debugging -->
    <key>NSBonjourServices</key>
    <array>
        <string>_dartobservatory._tcp</string>
    </array>
    <key>NSLocalNetworkUsageDescription</key>
    <string>Allow this app to find and connect to devices on your local network.</string>

    <!-- Background modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>location</string> <!-- needed for background GPS tracking -->
    </array>

    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <!-- Launch screens -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Status bar -->
    <key>UIStatusBarHidden</key>
    <false/>

    <!-- Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>
